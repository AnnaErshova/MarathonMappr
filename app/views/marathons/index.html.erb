<p id="notice"><%= notice %></p>

<h1>Race List:</h1>

<!-- scripts for google maps -->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
</script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'>
</script>

<%= search_form_for @q do |f| %>
  <fieldset>
    <legend>Marathon</legend>
    <!-- <ul> -->
      <!-- <li> -->
        <%= f.label :name_cont %>
        <%= f.text_field :name_cont%>
      <!-- </li> -->
    <!-- </ul> -->
  </fieldset>

  <%= f.submit %>
<% end %>


<table>
  <thead>
    <h3>Use Column Headers to Filter Race Results:</h3>
    <tr>
      <th><%= sort_link(@q, :name, "Name") %></th>
      <th><%= sort_link(@q, :city, "City") %></th>
      <th><%= sort_link(@q, :country, "Country") %></th>
      <th>Date description</th>
      <th><%= sort_link(@q, :month, "Month") %></th>
      <th><%= sort_link(@q, :year, "Year") %></th>
      <th><%= sort_link(@q, :day, "Day") %></th>
      <th><%= sort_link(@q, :kind, "Kind") %></th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th><%= sort_link(@q, :event_date, "Event Day") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marathons.each do |marathon| %>
      <tr>
        <td><%= marathon.name %></td>
        <td><%= marathon.city %></td>
        <td><%= marathon.country %></td>
        <td><%= marathon.date_description %></td>
        <td><%= marathon.month %></td>
        <td><%= marathon.year %></td>
        <td><%= marathon.day %></td>
        <td><%= marathon.kind %></td>
        <td><%= marathon.latitude %></td>
        <td><%= marathon.longitude %></td>
        <td><%= marathon.event_date %></td>
        <td><%= link_to 'Show', marathon %></td>
        <td><%= link_to 'Edit', edit_marathon_path(marathon) %></td>
        <td><%= link_to 'Destroy', marathon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Marathon', new_marathon_path %>

